{% set count = count|default(4) %}
{% set title = title|default('Latest Projects') %}
{% set projects = projects|default([]) %}

<div>
  <div class="py-16 {{ background }}">
    <div class="container mx-auto max-w-container">
      <div>
        <h3 class="mb-6 text-xl text-cc-dark-grey">{{ title }}</h3>
      </div>
      <div class="grid grid-cols-2 auto-rows-max gap-8">
        {% for project in projects %}
          {% include 'partials/project-card.twig' with { project: project } %}
        {% endfor %}
      </div>
    </div>
  </div>
  <div class="py-16 bg-cc-white">
    <div class="container flex justify-center mx-auto max-w-container">
      {% include 'partials/btn.twig' with {
        text: 'View all projects',
        url: '/our-work',
        style: 'default'
      } %}
    </div>
  </div>
</div>

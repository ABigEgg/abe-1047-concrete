{% set count = count|default(4) %}
{% set title = title|default('Latest Projects') %}
{% set projects = projects|default([]) %}

<div>
  <div class="py-16 {{ background }}">
    <div class="container mx-auto max-w-container">
      <div>
        <h3 class="mb-6 text-xl text-cc-dark-grey">{{ title }}</h3>
      </div>
      <div class="grid grid-cols-2 auto-rows-max gap-8">
        {% for project in projects %}
          <a class="p-8 pt-16 rounded-lg bg-cc-mid-grey min-h-[376px] hover:scale-105 transition-all hover:shadow-lg shadow-none" href="{{ project.link }}">
            <div class="flex flex-col justify-between h-full">
              <div>
                <h4 class="text-xl text-cc-white">{{ project.title }}</h4>
                {% if project.excerpt %}
                  <p class="mt-4 opacity-80 text-cc-white">{{ project.excerpt }}</p>
                {% endif %}
              </div>
              {% if project.terms('project_tags') %}
                <div class="flex flex-wrap gap-2">
                  {% for tag in project.terms('project_tags') %}
                    <span class="inline-block p-1 px-2 bg-opacity-30 rounded text-cc-white bg-cc-white">{{ tag.name }}</span>
                  {% endfor %}
                </div>
              {% endif %}
            </div>
          </a>
        {% endfor %}
      </div>
    </div>
  </div>
  <div class="py-16 bg-cc-white">
    <div class="container flex justify-center mx-auto max-w-container">
      {% include 'partials/btn.twig' with {
        text: 'View all projects',
        url: '/our-work'
      } %}
    </div>
  </div>
</div>

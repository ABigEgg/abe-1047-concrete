{# 
  Preserve Tailwind classes:
  bg-cc-mid-grey bg-cc-dark-grey bg-cc-light-grey bg-cc-grey bg-cc-white
#}
{% set background = background|default('cc-light-grey') %}
{# CTA #}
<div class="bg-{{ background }}">
  <div class="py-20">
    <div class="container mx-auto max-w-container">
      <div class="grid grid-cols-12 gap-8">
        <div class="col-span-9">
          <div class="mt-0">
            <h3 class="text-lg font-medium fnt-bld text-cc-dark-grey">{{ global_cta.heading }}</h3>
            <p class="mb-8 text-md text-cc-dark-grey">{{ global_cta.text }}</p>

            {% include 'partials/btn.twig' with {
              text: global_cta.button_text,
              url: global_cta.button_url,
              style: 'default'
            } %}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

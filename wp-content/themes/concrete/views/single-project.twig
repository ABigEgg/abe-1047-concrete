{% extends 'base.twig' %}

{% block main %}
  {# Masthead #}
  {% include 'partials/masthead.twig' with {
    title: post.title,
    background_image: post.thumbnail.src
  } %}

  {# Intro #}
  <div>
    <div class="py-16">
      <div class="container mx-auto max-w-container">
        <div class="grid grid-cols-2 gap-8">
          <div class="col-span-2">
            <p class="text-sm text-cc-dark-grey">{{ post.title }}</p>
            <p class="mb-0 text-sm text-cc-mid-grey">
              {% if post.terms('project_tags') %}
                {% for tag in post.terms('project_tags') %}
                  {{ tag.name }}{% if not loop.last %}, {% endif %}
                {% endfor %}
              {% endif %}
            </p>
          </div>
          <div class="col-auto">
            <h3 class="text-2xl text-cc-dark-grey">{{ post.project_intro_heading }}</h3>
          </div>
          <div class="col-auto">
            <div class="text-sm text-cc-mid-grey">{{ post.project_intro_summary }}</div>
          </div>
        </div>
      </div>
    </div>
  </div>

  {# Project Content - Gutenberg #}
  {% if post.content %}
    <div class="bg-cc-white">
      <div class="py-16">
        <div class="container mx-auto max-w-container">
          <div class="project-content">
            {{ post.content }}
          </div>
        </div>
      </div>
    </div>
  {% endif %}

  {# CTA #}
  <div class="bg-cc-light-grey">
    <div class="py-20">
      <div class="container mx-auto max-w-container">
        <div>

{% extends 'base.twig' %}

{% block main %}
  {# Masthead #}
  <div>
    <header class="h-screen bg-cc-mid-grey">
      <div class="container flex items-center justify-center h-full mx-auto max-w-container">
        <h2 class="text-2xl text-cc-white">Our Work</h2>
      </div>
    </header>
  </div>

  {# Projects #}
  <div>
    <div class="py-16">
      <div class="container mx-auto max-w-container">
        {# 3 up #}
        <div class="grid grid-cols-2 grid-rows-2 gap-8">
          {% for i in 1..3 %}
            <a class="p-8 pt-16 rounded-lg bg-cc-mid-grey min-h-[376px] hover:scale-105 transition-all hover:shadow-lg shadow-none {% if loop.first %}{% endif %}" href="#">
              <div class="flex flex-col justify-between h-full">
                <div>
                  <h4 class="text-xl text-cc-white">Description text to go here for project</h4>
                </div>
                <div class="flex gap-2">
                  {% set tags = ['Branding', 'Design', 'Digital', 'Motion', 'Display'] %}
                  {% for tag in tags %}
                    <span class="inline-block p-1 px-2 rounded text-cc-white bg-cc-white bg-opacity-30">{{ tag }}</span>
                  {% endfor %}
                </div>
              </div>
            </a>
          {% endfor %}
        </div>

        {# 2 up #}
        <div class="grid grid-cols-2 gap-8 mt-8">
          {% for i in 1..2 %}
            <a class="p-8 pt-16 rounded-lg bg-cc-mid-grey min-h-[376px] hover:scale-105 transition-all hover:shadow-lg shadow-none" href="#">
              <div class="flex flex-col justify-between h-full">
                <div>
                  <h4 class="text-xl text-cc-white">Description text to go here for project</h4>
                </div>
                <div class="flex gap-2">
                  {% set tags = ['Branding', 'Design', 'Digital', 'Motion', 'Display'] %}
                  {% for tag in tags %}
                    <span class="inline-block p-1 px-2 rounded text-cc-white bg-cc-white bg-opacity-30">{{ tag }}</span>
                  {% endfor %}
                </div>
              </div>
            </a>
          {% endfor %}
        </div>

        {# 1 up #}
        <div class="grid grid-cols-1 gap-8 mt-8">
          <a class="p-8 pt-16 rounded-lg bg-cc-mid-grey min-h-[784px] hover:scale-105 transition-all hover:shadow-lg shadow-none" href="#">
            <div class="flex flex-col justify-between h-full">
              <div>
                <h4 class="text-xl text-cc-white">Description text to go here for project</h4>
              </div>
              <div class="flex gap-2">
                {% set tags = ['Branding', 'Design', 'Digital', 'Motion', 'Display'] %}
                {% for tag in tags %}
                  <span class="inline-block p-1 px-2 rounded text-cc-white bg-cc-white bg-opacity-30">{{ tag }}</span>
                {% endfor %}
              </div>
            </div>
          </a>
        </div>
      </div>
    </div>
  </div>
{% endblock %}

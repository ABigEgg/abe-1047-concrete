<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.cdnfonts.com/css/effra-trial" rel="stylesheet">
    <link href="https://fonts.cdnfonts.com/css/effra-heavy" rel="stylesheet">
    
    {{ function('wp_head')  }}

</head>
<body {{ function('body_class', 'antialiased') }} x-data="{ hamburger: false }" x-bind:class="hamburger ? 'overflow-hidden' : ''">

{# Include navigation partial #}
{% include 'partials/navigation.twig' with { dark_variant: dark_variant|default(false) } %}

{% block main %}


{% endblock %}

{# Footer #}
<footer>
    <div class="py-8 md:py-12 lg:py-16 bg-cc-dark-grey">
        <div class="container mx-auto max-w-container">
            <div class="mb-16 max-w-[155px] md:max-w-64">
                <img src="{{ site.theme.link }}/svg/concrete-logo.svg">
            </div>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8 md:gap-0">
                <div>
                    <h3 class="text-xl md:text-2xl lg:text-3xl leading-[0.8] text-cc-white">Say hello</h3>
                </div>
                <div class="text-footer  md:text-2md">
                    <h4 class="text-cc-white text-footer md:text-2md">Contact</h4>
                    <p class="text-cc-mid-grey text-footer md:text-2md"><a href="mailto:{{ options.contact_email }}" class="hover:text-cc-white transition-colors">{{ options.contact_email }}</a></p>
                    <p class="text-cc-mid-grey text-footer md:text-2md"><a href="tel:{{ options.contact_phone|replace({' ': ''}) }}" class="hover:text-cc-white transition-colors">{{ options.contact_phone }}</a></p>

                    <h4 class="mt-6 md:mt-8 text-cc-white text-footer md:text-2md">Follow</h4>
                    <div class="text-cc-mid-grey flex gap-2 md:gap-4">
                        <a href="{{ options.contact_twitter|default('#') }}" class="text-footer md:text-2md hover:text-cc-white transition-colors">Twitter</a>
                        <a href="{{ options.contact_instagram|default('#') }}" class="text-footer md:text-2md hover:text-cc-white transition-colors ">Instagram</a>
                        <a href="{{ options.contact_linkedin|default('#') }}" class="text-footer md:text-2md hover:text-cc-white transition-colors">Linkedin</a>
                    </div>
                </div>
            </div>
            <div class="mt-8 md:mt-16 text-cc-white">
                <p class="text-copyright md:text-xs"><a href="#">Terms &amp; Privacy Policy</a> &copy; {{ function('date', 'Y') }} Concrete Creative</p>
            </div>
        </div>
    </div>
</footer>


    
{{ function('wp_footer') }}

</body>
</html>
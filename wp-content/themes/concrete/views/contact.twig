{% extends 'base.twig' %}

{% block main %}
  {# Masthead #}
  {% include 'partials/masthead.twig' with {
    title: 'Contact Us',
    background_image: post.thumbnail.src
  } %}

  {# Contact Form Section #}
  <div class="py-16 md:py-24">
    <div class="container mx-auto max-w-container px-4">
      <div class="max-w-3xl">
        <h3 class="text-3xl text-cc-dark-grey mb-6">Got a bold idea?</h3>
        <p class="text-xl text-cc-mid-grey mb-8">If you've got a project you'd like to discuss please complete our new project form below. Alternatively you can get in touch via <a href="mailto:{{ options.contact_email }}" class="underline hover:text-cc-dark-grey transition-colors">email</a> or just give us a <a href="tel:{{ options.contact_phone|replace({' ': ''}) }}" class="underline hover:text-cc-dark-grey transition-colors">call</a>.</p>
      </div>

      <form id="contact-form" method="POST" action="{{ fn('admin_url', 'admin-ajax.php') }}" class="max-w-4xl">
        <input type="hidden" name="action" value="submit_contact_form" />
        {{ fn('wp_nonce_field', 'contact_form_nonce') }}

        <div class="grid grid-cols-1 md:grid-cols-2 gap-x-8 gap-y-6">
          <div class="col-span-1">
            <label for="name" class="block mb-3 text-cc-dark-grey text-md">Name</label>
            <input type="text" id="name" name="name" required class="w-full p-4 bg-cc-light-grey border-0 rounded-md focus:outline-none focus:ring-2 focus:ring-cc-dark-grey transition-colors" />
          </div>

          <div class="col-span-1">
            <label for="company" class="block mb-3 text-cc-dark-grey text-md">Company</label>
            <input type="text" id="company" name="company" required class="w-full p-4 bg-cc-light-grey border-0 rounded-md focus:outline-none focus:ring-2 focus:ring-cc-dark-grey transition-colors" />
          </div>

          <div class="col-span-1">
            <label for="email" class="block mb-3 text-cc-dark-grey text-md">Email</label>
            <input type="email" id="email" name="email" required class="w-full p-4 bg-cc-light-grey border-0 rounded-md focus:outline-none focus:ring-2 focus:ring-cc-dark-grey transition-colors" />
          </div>

          <div class="col-span-1">
            <label for="phone" class="block mb-3 text-cc-dark-grey text-md">Telephone</label>
            <input type="tel" id="phone" name="phone" class="w-full p-4 bg-cc-light-grey border-0 rounded-md focus:outline-none focus:ring-2 focus:ring-cc-dark-grey transition-colors" />
          </div>

          <div class="col-span-2">
            <label class="block mb-3 text-cc-dark-grey text-md">Services Required</label>
            <div class="grid grid-cols-2 md:grid-cols-5 gap-3 w-full">
              {% for service in ['Branding', 'Design', 'Digital', 'Motion', 'Display'] %}
                <label class="relative">
                  <input type="radio" name="services" value="{{ service|lower }}" class="peer absolute opacity-0">
                  <span class="block w-full px-6 py-3 text-md text-cc-dark-grey bg-cc-light-grey text-center border border-cc-light-grey rounded-md cursor-pointer peer-checked:border-cc-dark-grey peer-checked:bg-cc-dark-grey peer-checked:text-cc-white transition-colors">
                    {{ service }}
                  </span>
                </label>
              {% endfor %}
            </div>
          </div>

          <div class="col-span-1">
            <label for="budget" class="block mb-3 text-cc-dark-grey text-md">Budget</label>
            <div class="relative">
              <select id="budget" name="budget" class="w-full p-4 bg-cc-light-grey border-0 rounded-md focus:outline-none focus:ring-2 focus:ring-cc-dark-grey appearance-none pr-10 transition-colors text-md text-cc-dark-grey">
                <option value="">Select Budget</option>
                <option value="1000">Less than £1,000</option>
                <option value="1000-5000">£1,000 - £5,000</option>
                <option value="5000-10000">£5,000 - £10,000</option>
                <option value="10000+">£10,000+</option>
              </select>
              <div class="absolute right-4 top-1/2 -translate-y-1/2 pointer-events-none">
                <svg width="14" height="8" viewBox="0 0 14 8" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M1 1L7 7L13 1" stroke="currentColor" stroke-width="1.5"/>
                </svg>
              </div>
            </div>
          </div>

          <div class="col-span-1">
            <label for="timescale" class="block mb-3 text-cc-dark-grey text-md">Timescale</label>
            <div class="relative">
              <select id="timescale" name="timescale" class="w-full p-4 bg-cc-light-grey border-0 rounded-md focus:outline-none focus:ring-2 focus:ring-cc-dark-grey appearance-none pr-10 transition-colors text-md text-cc-dark-grey">
                <option value="">Select Timescale</option>
                <option value="1-2weeks">1-2 weeks</option>
                <option value="2-4weeks">2-4 weeks</option>
                <option value="1-2months">1-2 months</option>
                <option value="2-3months">2-3 months</option>
                <option value="3months+">3+ months</option>
              </select>
              <div class="absolute right-4 top-1/2 -translate-y-1/2 pointer-events-none">
                <svg width="14" height="8" viewBox="0 0 14 8" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M1 1L7 7L13 1" stroke="currentColor" stroke-width="1.5"/>
                </svg>
              </div>
            </div>
          </div>

          <div class="col-span-2">
            <label for="message" class="block mb-3 text-cc-dark-grey text-md">Project Details</label>
            <textarea id="message" name="message" rows="6" required class="w-full p-4 bg-cc-light-grey border-0 rounded-md focus:outline-none focus:ring-2 focus:ring-cc-dark-grey transition-colors"></textarea>
          </div>

          <div class="col-span-2 mt-4">
            <button type="submit" class="px-8 py-3 bg-cc-white text-cc-dark-grey hover:bg-black hover:text-cc-white transition-colors rounded-md border border-cc-dark-grey text-2md">Submit</button>
          </div>
        </div>

        <div id="form-message" class="hidden mt-6"></div>
      </form>
    </div>
  </div>
{% endblock %}

{% block javascript %}
  <script>
    document.getElementById('contact-form').addEventListener('submit', function (e) {
      e.preventDefault()
    
      const form = this
      const formMessage = document.getElementById('form-message')
      const submitButton = form.querySelector('button[type="submit"]')
    
      // Disable submit button and show loading state
      submitButton.disabled = true
      submitButton.innerHTML = 'Sending...'
    
      fetch(form.action, {
        method: 'POST',
        body: new FormData(form)
      })
        .then((response) => response.json())
        .then((data) => {
          formMessage.classList.remove('hidden')
          formMessage.classList.add('p-4', 'rounded-lg', 'mb-4')
    
          if (data.success) {
            formMessage.classList.add('bg-green-100', 'text-green-700')
            formMessage.classList.remove('bg-red-100', 'text-red-700')
            formMessage.textContent = data.message
            form.reset()
          } else {
            formMessage.classList.add('bg-red-100', 'text-red-700')
            formMessage.classList.remove('bg-green-100', 'text-green-700')
            formMessage.textContent = data.message || 'An error occurred. Please try again.'
          }
        })
        .catch((error) => {
          formMessage.classList.remove('hidden')
          formMessage.classList.add('bg-red-100', 'text-red-700', 'p-4', 'rounded-lg', 'mb-4')
          formMessage.textContent = 'An error occurred. Please try again.'
        })
        .finally(() => {
          submitButton.disabled = false
          submitButton.innerHTML = 'Send Message'
        })
    })
  </script>
{% endblock %}

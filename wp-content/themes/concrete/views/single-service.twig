{% extends 'base.twig' %}

{% block main %}
  {# Masthead #}
  <div>
    <header class="h-screen bg-cc-mid-grey">
      <div class="container flex justify-center items-center mx-auto h-full max-w-container">
        <h2 class="text-3xl text-cc-white">{{ post.title }}</h2>
      </div>
    </header>
  </div>

  {# Intro #}
  <div>
    <div class="py-16">
      <div class="container mx-auto max-w-container">
        <div class="grid grid-cols-2 gap-8">
          <div class="col-span-2">
            <p class="text-sm text-cc-dark-grey">{{ post.title }}</p>
            <p class="mb-0 text-sm text-cc-mid-grey">Service</p>
          </div>
          <div class="col-auto">
            <h3 class="text-2xl text-cc-dark-grey">{{ post.subtitle ? post.subtitle : post.title }}</h3>
          </div>
          <div class="col-auto">
            <p class="text-sm text-cc-mid-grey">{{ post.content }}</p>
          </div>
        </div>
      </div>
    </div>
  </div>

  {# Paragraph #}
  <div>
    <div class="py-16">
      <div class="container mx-auto max-w-container">
        <div class="grid grid-cols-12 gap-8">
          <div class="col-span-9">
            <div class="mt-12">
              <p class="text-sm text-cc-mid-grey">{{ post.description }}</p>
            </div>  
          </div>
        </div>
      </div>
    </div>
  </div>

  {# CTA #}
  {% include 'partials/cta.twig' %}

  {# Latest projects #}
  {% include 'partials/latest-projects.twig' with {
    background: 'bg-cc-white',
    count: 2,
    title: 'Related Projects'
  } %}

{% endblock %} 